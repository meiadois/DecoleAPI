{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"],

      "@bull/*": ["./bull/*"],
      "@bull": ["./bull"],

      "@config/*": ["./config/*"],
      "@config": ["./config"],

      "@database/*": ["./database/*"],
      "@database": ["./database"],

      "@routes/*": ["./routes/*"],
      "@routes": ["./routes"],

      "@shared/*": ["./shared/*"],
      "@shared": ["./shared"],

      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"]
    }
  }
}
