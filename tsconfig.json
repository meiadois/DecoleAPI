{
  "compilerOptions": {
    "target": "esNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": false,
    "outDir": "dist/",
    "baseUrl": "src/app.ts",
    "listFiles": false,
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "strict": true,
    //"esModuleInterop": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}